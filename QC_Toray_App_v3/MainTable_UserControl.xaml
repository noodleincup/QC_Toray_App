<UserControl x:Class="QC_Toray_App_v3.MainTable_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QC_Toray_App_v3"
             xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             mc:Ignorable="d" 
             Width="1530" Height="835"
             Background="#FFDEDEDE">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Name="txbSearch"
                 mah:TextBoxHelper.Watermark="Search" 
                 TextChanged="txbSearch_TextChanged"
                 Width="200" 
                 Height="30" 
                 Background="White" 
                 BorderBrush="Black" 
                 BorderThickness="0.5" Style="{DynamicResource MahApps.Styles.TextBox}" 
                 Margin="20,10" HorizontalAlignment="Left"/>
        <!--Batch History-->
        <DataGrid Grid.Row="1" Margin ="20,0,20,0" 
                  x:Name="tableGrid" 
                  AutoGenerateColumns="True"
                  HeadersVisibility="Column"
                  CanUserSortColumns="True"
                  IsReadOnly="True"
                  CellStyle="{DynamicResource MaterialDesignDataGridCell}"
                  SelectedCellsChanged="tableGrid_SelectionCellChanged">
            
            <!--<DataGrid.Columns>
                <DataGridTextColumn Header="Date" Width="Auto"/>
                <DataGridTextColumn Header="Grade" Width="*"/>
                <DataGridTextColumn Header="lot" Width="Auto"/>
                <DataGridTextColumn Header="Order card no" Width="Auto"/>
                <DataGridTextColumn Header="Sample from" Width="Auto"/>
                <DataGridTextColumn Header="Pellet diameter" Width="Auto"/>
                <DataGridTextColumn Header="Target sample" Width="Auto"/>
                <DataGridTextColumn Header="Received sample" Width="Auto"/>
                <DataGridTextColumn Header="Waiting sample" Width="Auto"/>
                <DataGridTextColumn Header="Result of Current bt no" Width="Auto"/>
                <DataGridTextColumn Header="Result of total quatity bt no" Width="Auto"/>
                <DataGridTextColumn Header="Result Ng bt" Width="Auto"/>
            </DataGrid.Columns>-->
        </DataGrid>
        <!-- Buttons for Export & Print -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Left" Margin="20,10">
            <Button Content="Check data" Click="CheckLot_Clicked" Width="120" Margin="5"/>
        </StackPanel>
    </Grid>
</UserControl>
