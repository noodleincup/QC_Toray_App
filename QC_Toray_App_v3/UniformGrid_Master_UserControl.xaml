<UserControl x:Class="QC_Toray_App_v3.UniformGrid_Master_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QC_Toray_App_v3"
             mc:Ignorable="d" >
    <UniformGrid Columns ="3"  Margin="0,10">
        <UniformGrid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="Margin" Value="20,0"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
            <Style TargetType="TextBox">
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="BorderThickness" Value="0,0,0,0.5"/>
                <Setter Property="Width" Value="100"/>
                <Setter Property="TextAlignment" Value="Center"/>
            </Style>
        </UniformGrid.Resources>
        <!-- Bind TextBlock to HeadLabel property -->
        <TextBlock Text="{Binding HeadLabel, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

        <!--Bind TextBlock to SubLabel property -->
        <TextBlock Text="{Binding SubLabel, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

        <!-- Bind TextBox to InputValue property -->
        <TextBox Text="{Binding InputValue, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
    </UniformGrid>
</UserControl>
