<UserControl x:Class="QC_Toray_App_v3.Report2_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QC_Toray_App_v3"
             xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             mc:Ignorable="d" 
             Width="1530" Height="835"
             Background="#FFDEDEDE">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" mah:TextBoxHelper.Watermark="Search" 
         Width="200" 
         Height="30" 
         Background="White" 
         BorderBrush="Black" 
         BorderThickness="0.5" Style="{DynamicResource MahApps.Styles.TextBox}" 
         Margin="20,10" HorizontalAlignment="Left"/>
        <!--Batch History-->
        <DataGrid Grid.Row="1" Margin ="20,0,20,0" x:Name="dataGrid" AutoGenerateColumns="True"
              HeadersVisibility="Column" CanUserSortColumns="False"
               IsReadOnly="True" CellStyle="{DynamicResource MaterialDesignDataGridCell}"/>
        <!-- Buttons for Export & Print -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Left" Margin="20,10">
            <Button Content="Export CSV" Click="ExportToCSV_Click" Width="120" Margin="5"/>
            <Button Content="Export Excel" Click="ExportToExcel_Click" Width="120" Margin="5"/>
            <Button Content="Export PDF" Width="120" Margin="5" Click="BtnExport_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
