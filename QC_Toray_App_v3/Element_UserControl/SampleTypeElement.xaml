<UserControl x:Class="QC_Toray_App_v3.Element.SampleTypeElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QC_Toray_App_v3.Element"
             mc:Ignorable="d" 
             Foreground="Black"
             Height="70" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border BorderThickness="0.5" BorderBrush="Gray">
            <TextBlock x:Name="txtSampleName"
                       FontSize="24"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
        </Border>
        <Border Grid.Column="1" 
                BorderThickness="0.5" BorderBrush="Gray">
            <TextBlock x:Name="txtUpdateDate"
               FontSize="24"
               HorizontalAlignment="Center" 
               VerticalAlignment="Center"/>
        </Border>
        <Border Grid.Column="2" 
                BorderThickness="0.5" BorderBrush="Gray">
            <TextBlock x:Name="txtUpdateBy"
                        FontSize="24"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"/>
        </Border>
        <Border Grid.Column="3" 
                BorderThickness="0.5" BorderBrush="Gray">
            <Button x:Name="btnEdit"
                    Content="Edit"
                    FontSize="20"
                    Width="120"
                    Height="40"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Click="btnEdit_Click"/>
        </Border>
    </Grid>
</UserControl>
