<Window x:Class="QC_Toray_App_v3.Windows.AddLot_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QC_Toray_App_v3.Windows"
        mc:Ignorable="d"
        Title="Add Lot" 
        Height="180" Width="220"
        ResizeMode="NoResize"
        Background="#0A0A0A">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="5,0" Orientation="Horizontal" 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right">
            <Label FontSize="18" Content="Lot: "
                   Foreground="#FAFAFAFA"/>
            <Border CornerRadius="5"
                    BorderBrush="Gray"
                    Background="#FAF8FF"
                    BorderThickness="0.5"
                    Width="100" Height="30"
                    >
                <TextBox x:Name="txtLotNumber" FontSize="14" 
                         Height="30" Width="100"
                         Margin="0,0,20,0"
                         BorderThickness="0"
                         TextAlignment="Center"/>
            </Border>
        </StackPanel>
        <Button Grid.Row="1" Grid.Column="0"
                Grid.ColumnSpan="2"
                Content="Add Lot" 
                Width="100" Height="30" 
                HorizontalAlignment="Right"
                Margin="0,0,5,0"
                Background="#aca9bb"
                Click="btnAddLot_Click"/>
    </Grid>
</Window>
