            <DockPanel Grid.Row="1" Grid.ColumnSpan="2">
                <Button Name="btnRecord" Content="บันทึก"
                        DockPanel.Dock="Top"
                        FontSize="20" Width="200" Height="60" 
                        HorizontalAlignment="Center" VerticalAlignment="Top"
                        Margin="0,50,0,0"
                        Click="btnRecord_Clicked"/>
                <Button Name="btnSendData" Content="ส่งข้อมูล" 
                        DockPanel.Dock="Bottom"
                        FontSize="20" Width="200" Height="60" 
                        HorizontalAlignment="Center" VerticalAlignment="Top"
                        Margin="0,50,0,0"
                        Click="btnSendData_Clicked"/>
            </DockPanel>
        </Grid>
        <!-- #end region Right Area -->
    </Grid>
</UserControl>
