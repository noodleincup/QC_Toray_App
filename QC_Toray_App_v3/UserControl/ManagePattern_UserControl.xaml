<UserControl x:Class="QC_Toray_App_v3.UserControl.ManagePattern_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QC_Toray_App_v3.UserControl"
             mc:Ignorable="d" 
             Width="1530" Height="835"
             Background="#c3c3c3">
    <Border Background="#FAFAFA"  Margin="50,30" CornerRadius="50">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" 
                        Orientation="Horizontal"
                        HorizontalAlignment="Right" 
                        Margin="50,20">
                <Button Name="btnAdd"  
                        Width="150" Height="70"
                        Content="Add" FontSize="25"
                        Margin="20,0"/>
                <Button Name="btnSave"  
                        Width="150" Height="70"
                        Content="Save" FontSize="25"/>
            </StackPanel>

            <DataGrid Name="dgManagePattern"
                      Grid.Row="1"
                      Width="600" Height="400"
                      VerticalAlignment="Top"
                      BorderThickness="3"
                      BorderBrush="#c3c3c3"
                      Margin="0,50,0,0"/>       
        </Grid>
    </Border>
</UserControl>
