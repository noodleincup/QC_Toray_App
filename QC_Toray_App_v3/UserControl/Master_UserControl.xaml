<UserControl x:Class="QC_Toray_App_v3.Master_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:local="clr-namespace:QC_Toray_App_v3"
             mc:Ignorable="d" 
             Background="#FFDEDEDE"
             Width="1530" Height="835">
    <Grid>
        <Border Margin="100" Padding="50" BorderThickness="0.5" BorderBrush="#FFDEDEDE" CornerRadius="20" Background="#FAFAFA">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical">
                    <local:UniformGrid_Master_UserControl HeadLabel="   1.2) Misscut of pallets" SubLabel="(1) Double length" InputValue="2"/>
                    <local:UniformGrid_Master_UserControl HeadLabel="" SubLabel="(2) Triple length" InputValue="0"/>
                    <local:UniformGrid_Master_UserControl HeadLabel="" SubLabel="(3) Fourth length" InputValue="0"/>
                    <local:UniformGrid_Master_UserControl HeadLabel="   1.3) Linkage of Pallet" SubLabel="(1) Double linkage" InputValue="3"/>
                    <local:UniformGrid_Master_UserControl HeadLabel="" SubLabel="(2) Triple linkage" InputValue="0"/>
                    <local:UniformGrid_Master_UserControl HeadLabel="" SubLabel="(3) Fourfold linkage" InputValue="0"/>
                    <local:UniformGrid_Master_UserControl HeadLabel="" SubLabel="(4) Fivefold linkage" InputValue="0"/>
                    <local:UniformGrid_Master_UserControl HeadLabel="   1.4) Defect of cutting plane" SubLabel="" InputValue="0"/>
                    <local:UniformGrid_Master_UserControl HeadLabel="2) GF not Distribution" SubLabel="Level 1" InputValue="1"/>
                    <local:UniformGrid_Master_UserControl HeadLabel="" SubLabel="level 2" InputValue="0"/>
                    <local:UniformGrid_Master_UserControl HeadLabel="" SubLabel="level 3" InputValue="0"/>
                    <local:UniformGrid_Master_UserControl HeadLabel="3) Meyani" SubLabel="" InputValue="0"/>
                    <local:UniformGrid_Master_UserControl HeadLabel="" SubLabel="Not change color" InputValue="15"/>
                    
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Vertical">
                    <local:UniformGrid_Master_UserControl HeadLabel="4) Foreign materials" SubLabel="" InputValue="0"/>
                    <local:UniformGrid_Master_UserControl HeadLabel="5) Black Spot" SubLabel="(1)  SS (0.08 mm² >)" InputValue="2"/>
                    <local:UniformGrid_Master_UserControl HeadLabel="" SubLabel="(2)  S (0.08 - 0.20mm² >)" InputValue="1"/>
                    <local:UniformGrid_Master_UserControl HeadLabel="" SubLabel="(3)  M (0.20 - 0.50mm² >)" InputValue="0"/>
                    <local:UniformGrid_Master_UserControl HeadLabel="" SubLabel="(4)  L or more (> 0.50mm²)" InputValue="0"/>
                    <local:UniformGrid_Master_UserControl HeadLabel="" SubLabel="(3) Fourfold linkage" InputValue="0"/>
                    <local:UniformGrid_Master_UserControl HeadLabel="" SubLabel="(4) Fivefold linkage" InputValue="0"/>
                    <local:UniformGrid_Master_UserControl HeadLabel="6) Color abnormal " SubLabel="" InputValue="0"/>
                    <local:UniformGrid_Master_UserControl HeadLabel="7) Macaroni" SubLabel="(1) SS (1.00 mm² >)" InputValue="1"/>
                    <local:UniformGrid_Master_UserControl HeadLabel="" SubLabel="(2) S (1.00 - 1.50 mm² >)" InputValue="10"/>
                    <local:UniformGrid_Master_UserControl HeadLabel="" SubLabel="(3) M (1.50 - 1.50 mm² >)" InputValue="20"/>
                    <local:UniformGrid_Master_UserControl HeadLabel="" SubLabel="(4) L or more (> 1.50 mm)²" InputValue="0"/>
                    <Button Margin="30,62">Confirm</Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
