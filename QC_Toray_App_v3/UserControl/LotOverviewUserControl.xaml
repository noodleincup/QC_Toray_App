            <StackPanel Grid.Row="1" Grid.ColumnSpan="2"
                        Orientation="Vertical"
                        HorizontalAlignment="Center">
                
                <Border Name="borderMasterTable" CornerRadius="20"
                        Grid.ColumnSpan="2" Grid.RowSpan="2" 
                        Background="#FFFAFAFA" BorderBrush="Gray" 
                        Margin="20,0,17,0" Padding="15" 
                        Width="400" Height="360"   
                        VerticalAlignment="Top">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!--Master Label-->
                        <Border Grid.Row="0" Grid.Column="0"  BorderThickness="0.5,1,0.5,0.5">
                            <Label Content="Standard: " HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <Border Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" BorderThickness="0.5,1,0.5,0.5">
                            <ComboBox Name="cbxMasterStandard" 
                                      HorizontalAlignment="Center" VerticalAlignment="Center"
                                      Width="180"
                                      ItemsSource="{Binding ItemDiameters}"
                                      DisplayMemberPath="ItemName"
                                      SelectedItem="{Binding SelectedItemDiameter, Mode=TwoWay}">
                            </ComboBox>
                        </Border>

                        <!--Master Header-->
                        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="1" BorderBrush="Gray" BorderThickness="0.5,0.5,0.5,0.5">
                            <Label  Content="item" 
                                    HorizontalAlignment="Left" VerticalAlignment="Center" />
                        </Border>
                        <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" BorderBrush="Gray" BorderThickness="0.5,0.5,0.5,0.5">
                            <Label  Content="Linit" 
                                    HorizontalAlignment="Left" VerticalAlignment="Center" />
                        </Border>
                        <Border Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="1" BorderBrush="Gray" BorderThickness="0.5,0.5,0.5,0.5">
                            <Label  Content="AVG" 
                                    HorizontalAlignment="Left" VerticalAlignment="Center" />
                        </Border>

                        <!-- A Rows -->
                        
                        <!--Min A-->
                        <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="1" BorderBrush="Gray" BorderThickness="0.5,0.5,0.5,0.5">
                            <Label Content="A MIN" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <Border Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" BorderBrush="Gray" BorderThickness="0.5,0.5,0.5,0.5">
                            <TextBlock Name="tblMasterMinA"
                                   Text="{Binding SelectedItemDiameter.A_Min}" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>

                        <!--Max A-->
                        <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="1" BorderBrush="Gray" BorderThickness="0.5,0.5,0.5,0.5">
                            <Label Content="A MAX" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <Border Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" BorderBrush="Gray" BorderThickness="0.5,0.5,0.5,0.5">
                            <TextBlock Name="tblMasterMaxA"
                                       Text="{Binding SelectedItemDiameter.A_Max}" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>

                        <!--Average A-->
                        <Border Grid.Row="3" Grid.Column="3" Grid.RowSpan="2" BorderBrush="Gray" BorderThickness="0.5,0.5,0.5,0.5">
                            <TextBlock Name="tblMasterAverageA"
                                       Text="" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>

                        <!--Min B-->
                        <Border Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="1" BorderBrush="Gray" BorderThickness="0.5,0.5,0.5,0.5">
                            <Label Content="B MIN" 
                                    HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <Border Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" BorderBrush="Gray" BorderThickness="0.5,0.5,0.5,0.5">
                            <TextBlock Name="tblMasterMinB"
                                       Text="{Binding SelectedItemDiameter.B_Min}"
                                       HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>

                        <!--Max B-->
                        <Border Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="1" BorderBrush="Gray" BorderThickness="0.5,0.5,0.5,0.5">
                            <Label Content="B MAX" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <Border Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" BorderBrush="Gray" BorderThickness="0.5,0.5,0.5,0.5">
                            <TextBlock Name="tblMasterMaxB"
                                       Text="{Binding SelectedItemDiameter.B_Max}" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>

                        <!--Average B-->
                        <Border Grid.Row="5" Grid.Column="3" Grid.RowSpan="2" BorderBrush="Gray" BorderThickness="0.5,0.5,0.5,0.5">
                            <TextBlock Name="tblMasterAverageB"
                                       Text="" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>

                        <!--Min L-->
                        <Border Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="1" BorderBrush="Gray" BorderThickness="0.5,0.5,0.5,0.5">
                            <Label Content="L MIN" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <Border Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" BorderBrush="Gray" BorderThickness="0.5,0.5,0.5,0.5">
                            <TextBlock Name="tblMasterMinL"
                                       Text="{Binding SelectedItemDiameter.L_Min}" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>

                        <!--Max L-->
                        <Border Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="1" BorderBrush="Gray" BorderThickness="0.5,0.5,0.5,0.5">
                            <Label Content="L MAX" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <Border Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="2" BorderBrush="Gray" BorderThickness="0.5,0.5,0.5,0.5">
                            <TextBlock Name="tblMasterMaxL"
                                       Text="{Binding SelectedItemDiameter.L_Max}" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>

                        <!--Average L-->
                        <Border Grid.Row="7" Grid.Column="3" Grid.RowSpan="2" BorderBrush="Gray" BorderThickness="0.5,0.5,0.5,0.5">
                            <TextBlock Name="tblMasterAverageL"
                                       Text="" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>

                    </Grid>
                </Border>
                
                
            </StackPanel>
        </Grid>
        <!-- #end region Right Area -->
    </Grid>
</UserControl>
