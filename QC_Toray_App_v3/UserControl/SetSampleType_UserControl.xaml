<UserControl x:Class="QC_Toray_App_v3.UserControl.SetSampleType_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QC_Toray_App_v3.UserControl"
             mc:Ignorable="d" 
             Width="1530" Height="835"
             Background="#c3c3c3"
             Foreground="Black">
    <Border Background="#FAFAFA"  Margin="50,30" CornerRadius="50">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0" >
                <StackPanel DockPanel.Dock="Right"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right" 
                            Margin="50,20">
                    <Button Name="btnAdd"  
                            Width="150" Height="70"
                            Content="Add" FontSize="25"
                            Margin="20,0"/>
                    <Button Name="btnSave"  
                            Width="150" Height="70"
                            Content="Save" FontSize="25"/>
                </StackPanel>

                <Label DockPanel.Dock="Left"
                       Content="Set Sample Type" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       Margin="20,20"/>
            </DockPanel>

            <Grid Grid.Row="1"
                  Width="1200"
                  Margin="20,0,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- Header -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border BorderThickness="0.5" BorderBrush="Gray">
                        <TextBlock Text="Sample Name" 
                                   FontSize="24"
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    <Border Grid.Column="1" 
                            BorderThickness="0.5" BorderBrush="Gray">
                        <TextBlock Text="Update date" 
                                   FontSize="24"
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    <Border Grid.Column="2" 
                            BorderThickness="0.5" BorderBrush="Gray">
                        <TextBlock Text="Update by" 
                                   FontSize="24"
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    <Border Grid.Column="3" 
                            BorderThickness="0.5" BorderBrush="Gray">
                        <TextBlock Text="Edit" 
                                   FontSize="24"
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                </Grid>

                <!-- Sample Type Element-->
                <WrapPanel Grid.Row="1"
                           Name="wrpSampleTypeList"
                           Orientation="Vertical"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
