<UserControl x:Class="QC_Toray_App_v3.UserControl.BatchCell_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QC_Toray_App_v3.UserControl"
             mc:Ignorable="d" 
             d:DesignHeight="18" d:DesignWidth="320">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="0.5">
            <TextBlock Name="cols0" TextAlignment="Center"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="0.5">
            <TextBox Name="cols1" 
                     HorizontalAlignment="Center" VerticalAlignment="Center"
                     BorderThickness="0"
                     Width="100" TextAlignment="Center"/>
        </Border>
        <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="0.5">
            <TextBox Name="cols2" 
                     HorizontalAlignment="Center" VerticalAlignment="Center"
                     BorderThickness="0"
                     Width="100" TextAlignment="Center"/>
        </Border>
        <Border Grid.Column="3" BorderBrush="Gray" BorderThickness="0.5">
            <TextBox Name="cols3" 
                     HorizontalAlignment="Center" VerticalAlignment="Center"
                     BorderThickness="0"
                     Width="100" TextAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
