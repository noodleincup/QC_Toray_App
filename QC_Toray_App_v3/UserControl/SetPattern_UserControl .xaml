<UserControl x:Class="QC_Toray_App_v3.UserControl.SetPattern_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QC_Toray_App_v3.UserControl"
             mc:Ignorable="d"
             Background="#c3c3c3"
             Width="1530" Height="835">
    <Border Background="#FAFAFAFA"  Margin="50,30" CornerRadius="50">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" 
                   Content="Set Pattern" 
                   FontSize="36" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Left" 
                   Margin="20,20"
                   />
            <DataGrid Name="dgSetPattern"
                      Grid.Row="1"
                      VerticalAlignment="Top"
                      BorderThickness="3"
                      BorderBrush="#c3c3c3"
                      Margin="20,0,20,20"
                      PreviewMouseDown="MyDataGrid_PreviewMouseDown"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="False">
                <DataGrid.Resources>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>

                    <!-- Header Column 1 -->
                    <DataGridTextColumn Header="No"
                                        Binding="{Binding No}"
                                        IsReadOnly="True"
                                        Width="auto">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Header Column 2 -->
                    <DataGridTemplateColumn Header="Grade" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Grade}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <!--
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding MaxOKQty, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                     HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                        -->
                    </DataGridTemplateColumn>

                    <!-- Header Column 3 -->
                    <DataGridTemplateColumn Header="Grade Code" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding GradeCode}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <!-- Header Column 4 -->
                    <DataGridTemplateColumn Header="Update Date" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding UpdateDate}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    
                    <!-- Header Column 5 -->
                    <DataGridTemplateColumn Header="Pattern" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Pattern}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>

                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ComboBox HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          ItemsSource="{Binding DataContext.PatternNameItems, RelativeSource={RelativeSource AncestorType={x:Type local:SetPattern_UserControl}}}"
                                          SelectedItem="{Binding Pattern, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                          SelectionChanged="PatternComboBox_SelectionChanged"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>

                    <!-- Header Column 6 -->
                    <!--
                    <DataGridTemplateColumn Header="Description" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Description}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    -->
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</UserControl>
