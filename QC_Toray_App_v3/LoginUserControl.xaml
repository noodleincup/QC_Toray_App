<UserControl x:Class="QC_Toray_App_v3.LoginUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QC_Toray_App_v3"
             xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             PreviewKeyDown="Enter_Pressed"
             mc:Ignorable="d" 
             Background="#FFDEDEDE"
             Width="1530" Height="835">
    <Grid>
        <Border Background="#FAFAFA"  Margin="50,30" CornerRadius="50">
            <StackPanel>
                <Image Source="/image/Toray_logo.svg.png" Margin="50,10" Width="900" Height="400" />

                <Border MaxWidth="400" MinHeight="250" Margin="0,10" VerticalAlignment="Top" BorderThickness="2" BorderBrush="Gray" CornerRadius="20" Background="#FAFAFA">
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Margin="0,10"  Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="70" FontWeight="Bold">Login</TextBlock>
                        <TextBox Name="txbUser" Grid.Row="1" Margin="0,10" mah:TextBoxHelper.Watermark="Username" 
                             Width="200" 
                             Height="30" 
                             Background="White" 
                             BorderBrush="Black" 
                             BorderThickness="0.5" Style="{DynamicResource MahApps.Styles.TextBox}" />
                        <PasswordBox x:Name="txbPassword" Grid.Row="2" Margin="0,10"  Style="{StaticResource MahApps.Styles.PasswordBox}" 
                             mah:TextBoxHelper.Watermark="Password"
                             Width="200"
                             Height="30"/>
                        <Button Grid.Row="3" Width="200" Height="30" Margin="0,10,0,20" Background="#003E9A" Click="Login_Button_Clicked">Login</Button>
                    </Grid>
                </Border>
            </StackPanel>
            
            
        </Border>
        
    </Grid>
</UserControl>
