<Window x:Class="QC_Toray_App_v3.BatchDiameterDatail_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QC_Toray_App_v3"
        mc:Ignorable="d"
        Title="Batch diameter" Height="900" Width="400" ResizeMode="NoResize" FontSize="10">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!--Grid top-->
        <Border Grid.Row="0" Background="#FFFAFAFA" Height="100">
            <Border CornerRadius="20" Width="300" Height="80">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Row="0" Grid.Column="0" BorderBrush="Gray" BorderThickness="0.5,1,0.5,0.5">
                        <Label Content="Grade" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <Border Grid.Row="0" Grid.Column="1" BorderBrush="Gray" BorderThickness="0.5,1,0.5,0.5">
                        <TextBox Name="txbGrade" 
                                 Text="1" 
                                 HorizontalAlignment="Center" VerticalAlignment="Center"
                                 BorderThickness="0"
                                 Width="100" TextAlignment="Center"/>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="0" BorderBrush="Gray" BorderThickness="0.5,1,0.5,0.5">
                        <Label Content="Lot" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <Border Grid.Row="1" Grid.Column="1" BorderBrush="Gray" BorderThickness="0.5,1,0.5,0.5">
                        <TextBox Name="txbLot" 
                                 Text="1" 
                                 HorizontalAlignment="Center" VerticalAlignment="Center"
                                 BorderThickness="0"
                                 Width="100" TextAlignment="Center"/>
                    </Border>
                    <Border Grid.Row="2" Grid.Column="0" BorderBrush="Gray" BorderThickness="0.5,1,0.5,0.5">
                        <Label Content="Batch No." HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <Border Grid.Row="2" Grid.Column="1" BorderBrush="Gray" BorderThickness="0.5,1,0.5,0.5">
                        <TextBox Name="txbBatchNumber" 
                                 Text="1" 
                                 HorizontalAlignment="Center" VerticalAlignment="Center"
                                 BorderThickness="0"
                                 Width="100" TextAlignment="Center"/>
                    </Border>
                    
                </Grid>
            </Border>
        </Border>
        <!--End Grid top-->

        <!--Grid center-->
        <Grid Name="grdDiameterTable" Grid.Row="1" Margin="5"/>
        <!--End Grid center-->

        <!--Grid bottom-->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="0,0,0,5">
            <Button Content="Save" Click="btnSaveDiameterData_Clicked" Width="90" Height="25" Margin="20,0" FontSize="12"/>
            <Button Content="Measure" Click="btnCancelDiameterData_Clicked" Width="90" Height="25" Margin="20,0" FontSize="12" 
                    Background="#FFC864C8" BorderBrush="#FFC864C8"/>
        </StackPanel>
        <!--End Grid bottom-->
    </Grid>
</Window>
